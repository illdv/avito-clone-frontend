{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "classic",
    "jsx": "preserve",
    "outDir": "./build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2017"
    ]
  }
}